<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰 매니저"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333" />

        <LinearLayout
            android:id="@+id/serverStatusIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:background="@drawable/info_background"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <View
                android:id="@+id/serverStatusDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/button_circle"
                android:backgroundTint="#4CAF50"
                android:layout_marginRight="4dp" />

            <TextView
                android:id="@+id/serverStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="API 서버"
                android:textSize="10sp"
                android:textColor="#666" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnAdminSettings"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="관리자 기본설정"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnQRScan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="QR 코드 스캔"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnServerInfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="서버 정보"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_server"
        android:textColor="@android:color/white" />

</LinearLayout>